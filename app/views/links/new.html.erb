<%= form_for @link, class: "form-horizontal" do |l| %>
  <div class="form-group form-group-lg">
    <div class="row">
      <div class="col-md-8">
        <%= l.text_field :actual_url, class: "form-control", placeholder: "Enter a URL to shorten" %>
      </div>
      <div class="col-md-3">
        <%= l.submit "Shorten", class: "btn btn-primary btn-lg" %>
      </div>
    </div>
  </div>
<% end %>

<div class="page-header">
  <h2>Top 5 links</h2>
</div>

<% @top_links.each do |l| %>
  <ul class="list-group">
    <li class="list-group-item">
      <span class="badge"><%= l.clicks %> clicks</span>
      <%= l.actual_url %><br />
      <%= link_to l.short_url, link_redirect_path(l.key), target: "_blank" %>
    </li>
  </ul>
<% end %>